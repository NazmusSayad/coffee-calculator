{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "paths": {
      "$slice": ["./src\\store\\slice"],
      "$slice/*": ["./src\\store\\slice/*"],
      "$api": ["./src\\api"],
      "$api/*": ["./src\\api/*"],
      "$assets": ["./src\\assets"],
      "$assets/*": ["./src\\assets/*"],
      "$features": ["./src\\features"],
      "$features/*": ["./src\\features/*"],
      "$layouts": ["./src\\layouts"],
      "$layouts/*": ["./src\\layouts/*"],
      "$styles": ["./src\\styles"],
      "$styles/*": ["./src\\styles/*"],
      "$utils": ["./src\\utils"],
      "$utils/*": ["./src\\utils/*"],
      "$src": ["./src"],
      "$src/*": ["./src/*"]
    }
  },
  "include": ["src", "./declarations.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
